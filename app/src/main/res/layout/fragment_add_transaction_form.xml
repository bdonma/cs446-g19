    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addFriendsButton"
        android:layout_width="30dp"
        android:layout_height="37dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:clickable="true"
        android:src="@drawable/ic_add_white_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/peopleEditText"
        app:layout_constraintStart_toEndOf="@+id/peopleEditText"
        app:backgroundTint="@color/themeMainColor"/>

    <RadioButton
        android:id="@+id/loanedRadioButton"
        style="@android:style/Widget.Material.CompoundButton.RadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="Loaned"
        app:layout_constraintBottom_toBottomOf="@+id/borrowedRadioButton"
        app:layout_constraintStart_toEndOf="@+id/borrowedRadioButton"
        app:layout_constraintTop_toTopOf="@+id/borrowedRadioButton"
        app:layout_constraintVertical_bias="1.0" />

    <RadioButton
        android:id="@+id/borrowedRadioButton"
        style="@android:style/Widget.Material.CompoundButton.RadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:text="Borrowed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typeHeader" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="375dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="$"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cashHeader" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="Quantity"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barterHeading" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="131dp"
        android:layout_height="51dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="Units"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/editText6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editText6"
        app:layout_constraintTop_toTopOf="@+id/editText6" />


</android.support.constraint.ConstraintLayout>
</ScrollView>
