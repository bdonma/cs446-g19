        <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/resultsFriendsSearch"-->
            <!--android:layout_width="327dp"-->
            <!--android:layout_height="130dp"-->
            <!--tools:layout_editor_absoluteX="42dp"-->
            <!--tools:layout_editor_absoluteY="263dp"></android.support.v7.widget.RecyclerView>-->

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/addFriendsButton"
            android:layout_width="30dp"
            android:layout_height="37dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:src="@drawable/ic_add_white_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/peopleEditText"
            app:layout_constraintStart_toEndOf="@+id/peopleEditText" />

        <RadioGroup
            android:id="@+id/borrowedLoanedRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/typeHeader">

            <RadioButton
                android:id="@+id/borrowedRadioButton"
                style="@android:style/Widget.Material.CompoundButton.RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Borrowed"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="226dp" />

            <RadioButton
                android:id="@+id/loanedRadioButton"
                style="@android:style/Widget.Material.CompoundButton.RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Loaned"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="104dp" />
        </RadioGroup>

        <EditText
            android:id="@+id/cashValueEditText"
            android:layout_width="375dp"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="$"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cashHeader" />

        <EditText
            android:id="@+id/barterValueEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Quantity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barterHeading" />

        <EditText
            android:id="@+id/barterUnitEditText"
            android:layout_width="131dp"
            android:layout_height="51dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="Units"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="@+id/barterValueEditText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/barterValueEditText"
            app:layout_constraintTop_toTopOf="@+id/barterValueEditText" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="229dp"
            tools:layout_editor_absoluteY="233dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Every"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recurringHeader" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>

